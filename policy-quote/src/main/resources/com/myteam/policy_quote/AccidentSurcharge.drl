package com.myteam.policy_quote;

rule "AccidentSurcharge"
    
    salience 3
	no-loop 
	lock-on-active 
    
    when
        //conditions
        $driver : Driver(numberOfAccidents > 2)
        $policy : Policy(policyType == "AUTO")
    then
        //actions
        modify($policy) {setPriceSurcharge($policy.getPriceSurcharge() + 200)};

end