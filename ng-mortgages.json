{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "annotations": {
            "description": "Application template for Decision Management Mortgages demo.",
            "iconClass": "icon-jboss",
            "tags": "bpmsuite,jboss,xpaas,brms",
            "version": "1.0.0",
            "openshift.io/display-name": "Mortgages Demo - Decision Management angular client"
        },
        "name": "ng-mortgages"
    },
    "labels": {
        "template": "ng-mortgages"
    },
    "message": "A new angular mortgages demo has been created.",
    "parameters": [
        {
            "displayName": "Business Central Custom http Route Hostname",
            "description": "Custom hostname for http service route.  Leave blank for default hostname, e.g.: <application-name>-buscentr-<project>.<default-domain-suffix>",
            "name": "BUSINESS_CENTRAL_HOSTNAME_HTTP",
            "value": "",
            "required": false
        },
        {
            "displayName": "Application Name",
            "description": "The name for the application.",
            "name": "APPLICATION_NAME",
            "value": "myapp",
            "required": true
        }
    ],
    "objects": [
        {
            "kind": "Service",
            "apiVersion": "v1",
            "spec": {
                "ports": [
                    {
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "deploymentConfig": "${APPLICATION_NAME}-ng-mortgages"
                }
            },
            "metadata": {
                "name": "${APPLICATION_NAME}-ng-mortgages",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                },
                "annotations": {
                    "description": "The nodejs web server's http port for the mortgages demo."
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "id": "${APPLICATION_NAME}-ng-mortgages-http",
            "metadata": {
                "name": "${APPLICATION_NAME}-ng-mortgages",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                },
                "annotations": {
                    "description": "Route for nodejs mortgages http service."
                }
            },
            "spec": {
                "host": "${BUSINESS_CENTRAL_HOSTNAME_HTTP}",
                "to": {
                    "name": "${APPLICATION_NAME}-ng-mortgages"
                }
            }
        },
        {
          "kind": "BuildConfig",
          "apiVersion": "v1",
          "metadata": {
              "name": "${APPLICATION_NAME}-ng-mortgages",
              "labels": {
                  "application": "${APPLICATION_NAME}"
              }
          },
          "spec": {
            "output": {
              "to": {
                "kind": "ImageStreamTag",
                "name": "ng-mortgages:latest"
              }
            },
            "postCommit": {},
            "resources": {},
            "runPolicy": "Serial",
            "source": {
              "git": {
                "ref": "master",
                "uri": "https://github.com/gpe-mw-training/bxms_decision_mgmt_ngmortgages.git",
                "type": "Git"
              }
            },
            "strategy": {
              "sourceStrategy": {
                "from": {
                  "kind": "ImageStreamTag",
                  "name": "nodejs:6",
                  "namespace": "openshift"
                },
                "type": "Source"
              }
            },
            "triggers": [
              {
                  "type": "ImageChange"
              },
              {
                  "type": "ConfigChange"
              }
            ]
          }
        },
        {
          "kind": "ImageStream",
          "metadata": {
            "name": "ng-mortgages",
            "labels": {
                "application": "${APPLICATION_NAME}"
            }
          },
          "spec": {
            "lookupPolicy": {
              "local": false
            }
          }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-ng-mortgages",
                "labels": {
                    "application": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APPLICATION_NAME}-ng-mortgages"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "ng-mortgages:latest"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "deploymentConfig": "${APPLICATION_NAME}-ng-mortgages"
                },
                "template": {
                    "metadata": {
                        "name": "${APPLICATION_NAME}-ng-mortgages",
                        "labels": {
                            "deploymentConfig": "${APPLICATION_NAME}-ng-mortgages",
                            "application": "${APPLICATION_NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APPLICATION_NAME}-ng-mortgages",
                                "image": "ng-mortgages:latest",
                                "imagePullPolicy": "Always",
                                "livenessProbe": {
                                  "tcpSocket": {
                                      "port": 8080
                                  },
                                  "initialDelaySeconds": 15,
                                  "timeoutSeconds":1
                                },
                                "readinessProbe": {
                                  "tcpSocket": {
                                      "port": 8080
                                  },
                                  "initialDelaySeconds": 15,
                                  "timeoutSeconds":1
                                },
                                "ports": [
                                    {
                                        "name": "http",
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        }
    ]
}
