#!/bin/sh

# Purpose of this run script is to append additional properties to decision central execution environment

RUN_LOG_FILE=/tmp/run.log

# 1) Append binding for ssh to external access
echo "Adding external binding for nio.git" >> $RUN_LOG_FILE
sed -i '/org.uberfire.nio.git.ssh.cert.dir/a\    JBOSS_BPMSUITE_ARGS="${JBOSS_BPMSUITE_ARGS} -Dorg.uberfire.nio.git.ssh.host=0.0.0.0' $JBOSS_HOME/bin/launch/bpmsuite-businesscentral.sh
echo "nio.git external binding addedd to " $JBOSS_HOME/bin/launch/bpmsuite-businesscentral.sh >> $RUN_LOG_FILE
echo cat $JBOSS_HOME/bin/launch/bpmsuite-businesscentral.sh >> $RUN_LOG_FILE

exec $JBOSS_HOME/bin/openshift-launch.sh
